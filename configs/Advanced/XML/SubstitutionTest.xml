        <!-- No Ground Water Configuration UI Complete -->

    </ConfigSection>
    <!-- Setup Screen Complete -->





    <!-- Overworld Setup Beginning -->

    <IfCondition condition=':= ?COGActive'>

        <!-- Starting Original "Overworld" Block Removal -->

        <IfCondition condition=':= ?blockExists("minecraft:stone")'>
            <Substitute name='subtOverworldBlockSubstitute0' block='minecraft:stone'>
                <Description>
                    Replace vanilla-generated ore clusters.
                </Description>
                <Comment>
                    The global option deferredPopulationRange  must be
                    large enough to catch all ore  clusters (>= 32).
                </Comment>
                
                <IfCondition condition=':= ?blockExists("minecraft:dirt")'> <Replaces block='minecraft:dirt' weight='1.0' /> </IfCondition>
                <IfCondition condition=':= ?blockExists("minecraft:glass")'> <Replaces block='minecraft:glass' weight='1.0' /> </IfCondition>
            </Substitute>
        </IfCondition>

        <!-- Original "Overworld" Block Removal Complete -->

        <!-- Adding blocks -->

        <!-- Begin Deepen the Dirt Generation -->

        <!-- Starting Substitution Preset for Deepen the Dirt. -->
        <ConfigSection>
            <IfCondition condition=':= subtDeepentheDirtDist = "Substitution"'>
                <Substitute name='subtDeepentheDirtSubstitute'  minHeight='50'  maxHeight='64'  drawWireframe='true' wireframeColor='0x606435F6' drawBoundBox='false' boundBoxColor='0x600ED5CC'>
                    <Description>
                        This is a global replacement of one block
                        with another.  Height clamping is needed  to
                        keep the substitution from being  universal.
                    </Description>
                    <IfCondition condition=':= ?blockExists("minecraft:dirt")'> <OreBlock block='minecraft:dirt' weight='1.0' /> </IfCondition>
                    <IfCondition condition=':= ?blockExists("minecraft:stone")'> <Replaces block='minecraft:stone' weight='1.0' /> </IfCondition>
                    <Biome name='.*'  />
                </Substitute>
            </IfCondition>
        </ConfigSection>
        <!-- Substitution Preset for Deepen the Dirt is complete. -->

        <!-- End Deepen the Dirt Generation -->


        <!-- Begin Dirt Mountains Generation -->

        <!-- Starting Substitution Preset for Dirt Mountains. -->
        <ConfigSection>
            <IfCondition condition=':= subtDirtMountainsDist = "Substitution"'>
                <Substitute name='subtDirtMountainsSubstitute'  minHeight='63'  maxHeight='128'  drawWireframe='true' wireframeColor='0x606435F6' drawBoundBox='false' boundBoxColor='0x600ED5CC'>
