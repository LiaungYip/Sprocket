        <!-- Begin Glass the Land Generation -->

        <!-- Starting Substitution Preset for Glass the Land. -->
        <ConfigSection>
            <IfCondition condition=':= subtGlasstheLandDist = "Substitution"'>
                <Substitute name='subtGlasstheLandSubstitute'  drawWireframe='true' wireframeColor='0x606435F6' drawBoundBox='false' boundBoxColor='0x600ED5CC'>
