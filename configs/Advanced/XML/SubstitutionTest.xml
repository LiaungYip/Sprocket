        </ConfigSection>
        <!-- Substitution Preset for Glass the Land is complete. -->

        <!-- End Glass the Land Generation -->


        <!-- Begin No Ground Water Generation -->

        <!-- Starting Substitution Preset for No Ground Water. -->
        <ConfigSection>
            <IfCondition condition=':= subtNoGroundWaterDist = "Substitution"'>
                <Substitute name='subtNoGroundWaterSubstitute'  minHeight='0'  maxHeight='64'  drawWireframe='true' wireframeColor='0x606435F6' drawBoundBox='false' boundBoxColor='0x600ED5CC'>
                    <Description>
                        This is a global replacement of one block
                        with another.  Height clamping is needed  to
                        keep the substitution from being  universal.
                    </Description>
                    
                    <IfCondition condition=':= ?blockExists("minecraft:stone")'> <Replaces block='minecraft:stone' weight='1.0' /> </IfCondition>
                    <Biome name='.*'  />
                </Substitute>
            </IfCondition>
        </ConfigSection>
        <!-- Substitution Preset for No Ground Water is complete. -->

        <!-- End No Ground Water Generation -->

        <!-- Finished adding blocks -->

    </IfCondition>
    <!-- Overworld Setup Complete -->




</ConfigSection>
