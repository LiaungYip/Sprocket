                        <WireframeColor>0x60DC1890</WireframeColor>
                        <Setting name='DistributionFrequency' avg=':= 1 * mtluSulfurFreq *_default_'/>
                        <Setting name='CloudRadius' avg=':= 1 * mtluSulfurSize * _default_' range=':= 1 * mtluSulfurSize * _default_'/>
                        <Setting name='CloudThickness' avg=':= 1 * mtluSulfurSize * _default_' range=':= 1 * mtluSulfurSize * _default_'/>
