                    <Veins name='mtluSulfur0Veins' block='Metallurgy:utility.ore' inherits='PresetSparseVeins'>
                        <Description>
                            Large veins filled very lightly with ore.  Because they contain less ore per volume, 
                            these veins are relatively wide and long.  Mining the ore from them is time consuming 
                            compared to solid ore veins.  They are also more difficult to follow, since it is 
                            harder to get an idea of their direction while mining.
                        </Description>
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60DC1890</WireframeColor>
                        <Setting name='MotherlodeFrequency' avg=':= 1 * mtluSulfurFreq * _default_'/>
                        <Setting name='MotherlodeSize' avg=':= 1 * mtluSulfurSize * _default_' range=':= 1 * mtluSulfurSize * _default_'/>
                        <Setting name='MotherlodeHeight' avg=':= 98/64 * dimension.groundLevel' range=':= 64/64 * dimension.groundLevel' type='normal' scaleTo='Biome' />
                        <Setting name='SegmentRadius' avg=':= 1 * mtluSulfurSize * _default_' range=':= 1 * mtluSulfurSize * _default_'/>
                        <Replaces block='minecraft:stone'/>
                    </Veins>
                </IfCondition>
                <IfCondition condition=':= mtluSulfurDist = "strategicCloud"'>
                    <Cloud name='mtluSulfur0Cloud' block='Metallurgy:utility.ore' inherits='PresetStrategicCloud'>
