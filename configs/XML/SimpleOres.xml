            <!-- Setup Overworld -->
            <IfCondition condition=':= ?COGActive'>
                <!-- **********   Vanilla Deposit Removal   ************* -->
                <Substitute name='smpoOverworldOreSubstitute0' block='minecraft:stone'>
                    <Description>
                        Replace vanilla-generated ore clusters.
                    </Description>
                    <Comment>
                        The global option deferredPopulationRange must be large enough to catch all ore clusters (>= 32).
                    </Comment>
                    <Replaces block='simpleores:copper_ore:0' />
                    <Replaces block='simpleores:tin_ore:0' />
                    <Replaces block='simpleores:mythril_ore:0' />
                    <Replaces block='simpleores:adamantium_ore:0' />
                </Substitute>
                <!-- Adding ores --> 
                <IfCondition condition=':= smpoCopperDist = "layeredVeins"'>
                    <Veins name='smpoCopper0Veins' block='simpleores:copper_ore' inherits='PresetLayeredVeins'>
                        <Description>
                            Small, fairly rare motherlodes with 2-4 horizontal veins each.
                        </Description>
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x6020CDD5</WireframeColor>
                        <Setting name='MotherlodeSize' avg=':= 1 * smpoCopperSize * _default_' range=':= 1 * smpoCopperSize * _default_'/>
                        <Setting name='MotherlodeFrequency' avg=':= 1 * smpoCopperFreq * _default_'/>
                        <Setting name='MotherlodeHeight' avg=':= 64/64 * dimension.groundLevel' range=':= 64/64 * dimension.groundLevel' type='normal' scaleTo='Biome'/> 
                        <Setting name='SegmentRadius' avg=':= 1 * smpoCopperSize * _default_' range=':= 1 * smpoCopperSize * _default_'/>
                        <Replaces block='minecraft:stone'/>
                    </Veins>
                </IfCondition>
