
<!-- ================================================================ 

Custom Ore Generation:   Metallurgy 4 Base Module

Generates: Copper, Tin, Manganese

================================================================ -->

    <!-- Mod detection -->
    <IfModInstalled name="Metallurgy">
        
        <!-- Starting Custom Ore Gen Configuration. -->
        <ConfigSection>
        
            
            <!-- Setup Screen Configuration -->
            <ConfigSection>
                <OptionDisplayGroup name='groupMetallurgy4Base' displayName='Metallurgy 4 Base' displayState='shown'> 
                    <Description>
                        Distribution options for Metallurgy 4 Base Ores.
                    </Description>
                </OptionDisplayGroup>
                
                <!-- Copper Configuration UI Starting -->
                <ConfigSection>
                    <OptionChoice name='mtlbCopperDist'  displayState='shown' displayGroup='groupMetallurgy4Base'> 
                        <Description> Controls how Copper is generated </Description> 
                        <DisplayName>Metallurgy 4 Base Copper</DisplayName>
                        <Choice value='layeredVeins' displayValue='Layered Veins'>
                            <Description>
                                Layered Veins.
                            </Description>
                        </Choice>
                        <Choice value='hugeVeins' displayValue='Huge Veins'>
                            <Description>
                                Huge Veins.
                            </Description>
                        </Choice>
                        <Choice value='strategicCloud' displayValue='Clouds'>
                            <Description>
                                Strategic Clouds.
                            </Description>
                        </Choice>
                        <Choice value='vanillaStdGen' displayValue='Vanilla'>
                            <Description>
                                Vanilla-style clusters.
                            </Description>
                        </Choice>
                        <Choice value='none' displayValue='None' description='Copper is not generated in the world.'/>
                    </OptionChoice>
                    <OptionNumeric name='mtlbCopperFreq' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupMetallurgy4Base'>
                        <Description> Frequency multiplier for Metallurgy 4 Base Copper distributions </Description>
                        <DisplayName>Metallurgy 4 Base Copper Freq.</DisplayName>
                    </OptionNumeric>
                    <OptionNumeric name='mtlbCopperSize' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupMetallurgy4Base'>
                        <Description> Size multiplier for Metallurgy 4 Base Copper distributions </Description>
                        <DisplayName>Metallurgy 4 Base Copper Size</DisplayName>
                    </OptionNumeric>
                </ConfigSection> 
                <!-- Copper Configuration UI Complete -->
                
                
                <!-- Tin Configuration UI Starting -->
                <ConfigSection>
                    <OptionChoice name='mtlbTinDist'  displayState='shown' displayGroup='groupMetallurgy4Base'> 
                        <Description> Controls how Tin is generated </Description> 
                        <DisplayName>Metallurgy 4 Base Tin</DisplayName>
                        <Choice value='layeredVeins' displayValue='Layered Veins'>
                            <Description>
                                Layered Veins.
                            </Description>
                        </Choice>
                        <Choice value='hugeVeins' displayValue='Huge Veins'>
                            <Description>
                                Huge Veins.
                            </Description>
                        </Choice>
                        <Choice value='strategicCloud' displayValue='Clouds'>
                            <Description>
                                Strategic Clouds.
                            </Description>
                        </Choice>
                        <Choice value='vanillaStdGen' displayValue='Vanilla'>
                            <Description>
                                Vanilla-style clusters.
                            </Description>
                        </Choice>
                        <Choice value='none' displayValue='None' description='Tin is not generated in the world.'/>
                    </OptionChoice>
                    <OptionNumeric name='mtlbTinFreq' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupMetallurgy4Base'>
                        <Description> Frequency multiplier for Metallurgy 4 Base Tin distributions </Description>
                        <DisplayName>Metallurgy 4 Base Tin Freq.</DisplayName>
                    </OptionNumeric>
                    <OptionNumeric name='mtlbTinSize' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupMetallurgy4Base'>
                        <Description> Size multiplier for Metallurgy 4 Base Tin distributions </Description>
                        <DisplayName>Metallurgy 4 Base Tin Size</DisplayName>
                    </OptionNumeric>
                </ConfigSection> 
                <!-- Tin Configuration UI Complete -->
                
                
                <!-- Manganese Configuration UI Starting -->
                <ConfigSection>
                    <OptionChoice name='mtlbManganeseDist'  displayState='shown' displayGroup='groupMetallurgy4Base'> 
                        <Description> Controls how Manganese is generated </Description> 
                        <DisplayName>Metallurgy 4 Base Manganese</DisplayName>
                        <Choice value='layeredVeins' displayValue='Layered Veins'>
                            <Description>
                                Layered Veins.
                            </Description>
                        </Choice>
                        <Choice value='hugeVeins' displayValue='Huge Veins'>
                            <Description>
                                Huge Veins.
                            </Description>
                        </Choice>
                        <Choice value='strategicCloud' displayValue='Clouds'>
                            <Description>
                                Strategic Clouds.
                            </Description>
                        </Choice>
                        <Choice value='vanillaStdGen' displayValue='Vanilla'>
                            <Description>
                                Vanilla-style clusters.
                            </Description>
                        </Choice>
                        <Choice value='none' displayValue='None' description='Manganese is not generated in the world.'/>
