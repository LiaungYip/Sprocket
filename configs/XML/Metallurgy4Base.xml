                        <WireframeColor>0x60493DD7</WireframeColor>
                        <Setting name='MotherlodeFrequency' avg=':= 2 * 1 * 0.9 * mtlbCopperFreq * _default_'/>
                        <BiomeType name='Cold'/>
                    </Veins>
