                            <Replaces block='minecraft:sandstone'/>
                            <BiomeType name='Cold'/>
                        </Veins>
                        <!-- End Copper Strategic Cloud Hint Veins -->

                    </Cloud>
                    <!-- End Preferred Biome Distribution (Copper Strategic Cloud) Settings -->
                
                </IfCondition>
                <!-- End  Strategic Cloud distribution of Copper -->
                
                
                <!-- Begin  Vanilla distribution of Copper -->
                <IfCondition condition=':= mtlbCopperDist = "vanillaStdGen"'>
                
                    <StandardGen name='mtlbCopperBaseStandard' block='Metallurgy:base.ore' inherits='PresetStandardGen'>
                        <Description>
                            This mimics vanilla ore generation.
                        </Description>
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60493DD7</WireframeColor>
                        <Setting name='Frequency' avg=':= 1 * 1 * 1 * mtlbCopperFreq * _default_'/>
                        <Setting name='Size' avg=':= 1 * 1 * mtlbCopperSize * _default_'/>
                        <Setting name='Height' avg=':= 43' range=':= 10.5'/> 
                        <Replaces block='minecraft:stone'/>
                    </StandardGen>
                    
                    <!-- Begin Preferred Biome Distribution (Copper Vanilla) Settings -->
                    <StandardGen name='mtlbCopperPrefersStandard' block='Metallurgy:base.ore' inherits='mtlbCopperBaseStandard'>
                        <Description>
                            Spawns 2 more times in preferred biomes.
                        </Description>
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60493DD7</WireframeColor>
                        <Setting name='Frequency' avg=':= 2 * 1 * 1 * mtlbCopperFreq * _default_'/>
                        <BiomeType name='Cold'/>
                    </StandardGen>
                    <!-- End Preferred Biome Distribution (Copper Vanilla) Settings -->
                
                </IfCondition>
                <!-- End  Vanilla distribution of Copper -->
                
                <!-- End Copper Generation --> 

                
                <!-- Begin Tin Generation --> 
                
