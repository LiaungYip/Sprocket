                        <Setting name='CloudRadius' avg=':= 1 * 1 * mtlbCopperSize * _default_' range=':= 1 * 1 * mtlbCopperSize * _default_'/>
                        <Setting name='CloudThickness' avg=':= 1 * 1 * mtlbCopperSize * _default_' range=':= 1 * 1 * mtlbCopperSize * _default_'/>
