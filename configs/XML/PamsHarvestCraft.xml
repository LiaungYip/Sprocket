
<!-- ================================================================ 

Custom Ore Generation:   Pams HarvestCraft Module

Generates: Salt

================================================================ -->

    <!-- Mod detection -->
    <IfModInstalled name="harvestcraft">
        
        <!-- Starting Custom Ore Gen Configuration. -->
        <ConfigSection>
        
            
            <!-- Setup Screen Configuration -->
            <ConfigSection>
                <OptionDisplayGroup name='groupPamsHarvestCraft' displayName='Pams HarvestCraft' displayState='shown'> 
                    <Description>
                        Distribution options for Pams HarvestCraft Ores.
                    </Description>
                </OptionDisplayGroup>
                
                <!-- Salt Configuration UI Starting -->
                <ConfigSection>
                    <OptionChoice name='hvstSaltDist'  displayState='shown' displayGroup='groupPamsHarvestCraft'> 
                        <Description> Controls how Salt is generated </Description> 
                        <DisplayName>Pams HarvestCraft Salt</DisplayName>
                        <Choice value='layeredVeins' displayValue='Layered Veins'>
                            <Description>
                                Layered Veins.
                            </Description>
                        </Choice>
                        <Choice value='strategicCloud' displayValue='Clouds'>
                            <Description>
                                Strategic Clouds.
                            </Description>
                        </Choice>
                        <Choice value='vanillaStdGen' displayValue='Vanilla'>
                            <Description>
                                Vanilla-style clusters.
                            </Description>
                        </Choice>
                        <Choice value='none' displayValue='None' description='Salt is not generated in the world.'/>
                    </OptionChoice>
                    <OptionNumeric name='hvstSaltFreq' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupPamsHarvestCraft'>
                        <Description> Frequency multiplier for Pams HarvestCraft Salt distributions </Description>
                        <DisplayName>Pams HarvestCraft Salt Freq.</DisplayName>
                    </OptionNumeric>
                    <OptionNumeric name='hvstSaltSize' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupPamsHarvestCraft'>
                        <Description> Size multiplier for Pams HarvestCraft Salt distributions </Description>
                        <DisplayName>Pams HarvestCraft Salt Size</DisplayName>
                    </OptionNumeric>
                </ConfigSection> 
                <!-- Salt Configuration UI Complete -->
                
            </ConfigSection>
            <!-- Setup Screen Complete -->


            <!-- Setup Overworld -->
            <IfCondition condition=':= ?COGActive'>
                
                <!-- Starting Original Overworld Ore Removal -->
                <Substitute name='hvstOverworldOreSubstitute0' block='minecraft:stone'>
                    <Description>
                        Replace vanilla-generated ore clusters.
                    </Description>
                    <Comment>
                        The global option deferredPopulationRange must be large enough to catch all ore clusters (>= 32).
                    </Comment>
                    <Replaces block='harvestcraft:salt:0' />
                </Substitute>
                <!-- Original Overworld Ore Removal Complete -->
                
                <!-- Adding ores --> 
                
                <!-- Begin Salt Generation --> 
                
                <!-- Begin LayeredVeins distribution of Salt -->
                <IfCondition condition=':= hvstSaltDist = "layeredVeins"'>
                
                    <Veins name='hvstSalt0Veins' block='harvestcraft:salt' inherits='PresetLayeredVeins'>
                        <Description>
                            Small, fairly rare motherlodes with 2-4 horizontal veins each.
                        </Description>
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60888888</WireframeColor>
                        <Setting name='MotherlodeSize' avg=':= 1 * 1 * hvstSaltSize * _default_' range=':= 1 * 1 * hvstSaltSize * _default_'/>
                        <Setting name='MotherlodeFrequency' avg=':= 1 * 1 * 10.7 * hvstSaltFreq * _default_'/>
                        <Setting name='MotherlodeHeight' avg=':= 60' range=':= 10' type='normal' scaleTo='Base'/> 
                        <Setting name='SegmentRadius' avg=':= 1 * 1 * hvstSaltSize * _default_' range=':= 1 * 1 * hvstSaltSize * _default_'/>
                        <Setting name='OreDensity' avg=':= 1 * 1.75 * _default_' range=':= _default_'/>
                        <Replaces block='minecraft:stone'/>
                    </Veins>
                    
                    <!-- Begin Preferred Biome Distribution (Salt Layered Veins) Settings -->
                    <Veins name='hvstSalt1Veins' block='harvestcraft:salt' inherits='PresetLayeredVeins'>
                        <Description>
                            Small, fairly rare motherlodes with 2-4 horizontal veins each.
                            2 times as likely in preferred biomes.
                        </Description>
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60888888</WireframeColor>
                        <Setting name='MotherlodeSize' avg=':= 1 * 1 * hvstSaltSize * _default_' range=':= 1 * 1 * hvstSaltSize * _default_'/>
                        <Setting name='MotherlodeFrequency' avg=':= 2 * 1 * 10.7 * hvstSaltFreq * _default_'/>
                        <Setting name='MotherlodeHeight' avg=':= 60' range=':= 10' type='normal' scaleTo='Base'/> 
                        <Setting name='SegmentRadius' avg=':= 1 * 1 * hvstSaltSize * _default_' range=':= 1 * 1 * hvstSaltSize * _default_'/>
                        <Setting name='OreDensity' avg=':= 1 * 1.75 * _default_' range=':= _default_'/>
                        <Replaces block='minecraft:stone'/>
                        <BiomeType name='Ocean'/>
                        <BiomeType name='Beach'/>
                        <BiomeType name='Mountain'/>
                    </Veins>
                    <!-- End Preferred Biome Distribution (Salt Layered Veins) Settings -->
                
                </IfCondition>
                <!-- End LayeredVeins distribution of Salt -->
                
                
                <!-- Begin  StrategicCloud distribution of Salt -->
                <IfCondition condition=':= hvstSaltDist = "strategicCloud"'>
                
                    <Cloud name='hvstSalt0Cloud' block='harvestcraft:salt' inherits='PresetStrategicCloud'>
                        <Description>
                            Large irregular clouds filled lightly with ore.  These are huge, spanning several 
                            adjacent chunks, and consequently rather rare.  They contain a sizeable amount of 
                            ore, but it takes some time and effort to mine due to low density.
                            The intent for strategic clouds is that the player will need to actively search for
                            one and then set up a semi-permanent mining base and spend some time actually mining
                            the ore.
                        </Description>
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60888888</WireframeColor>
                        <Setting name='DistributionFrequency' avg=':= 1 * 1 * 1 * hvstSaltFreq *_default_'/>
                        <Setting name='CloudRadius' avg=':= 1 * 1 * hvstSaltSize * _default_' range=':= 1 * 1 * hvstSaltSize * _default_'/>
                        <Setting name='CloudThickness' avg=':= 1 * 1 * hvstSaltSize * _default_' range=':= 1 * 1 * hvstSaltSize * _default_'/>
                        <Setting name='CloudHeight' avg='60' range='10' type='normal' scaleTo='Base'/>
                        <Setting name='OreDensity' avg=':= 1 * 0.75 * _default_' range=':= _default_'/>
                        <Setting name='CloudThickness' avg=':= 1 * 1 * 1 * hvstSaltSize * _default_' range=':= 1 * 1 * 1 * hvstSaltSize  * _default_'/>
                        <Replaces block='minecraft:stone'/>
                        
                        <!-- Begin Salt Strategic Cloud Hint Veins -->
                        <Veins name='hvstSalt0HintVeins' block='harvestcraft:salt' inherits='PresetHintVeins'>
                            <Description>
                                Small, fairly rare motherlodes with 2-4 horizontal veins each.
                            </Description>
                            <DrawWireframe>:=drawWireframes</DrawWireframe>
                            <WireframeColor>0x60888888</WireframeColor>
                            <Setting name='MotherlodeFrequency' avg=':= 1 * 1.2 * 1 * 1 * hvstSaltFreq * _default_' range=':= _default_'/> 
                            <Setting name='MotherlodeHeight' avg=':= 60' range=':= 10' type='normal' scaleTo='Base' /> 
                            <Setting name='MotherlodeRangeLimit' avg=':= 1 * 1 * hvstSaltSize * _default_' range=':= 1 * 1 * hvstSaltSize * _default_'/>
                            <Setting name='OreDensity' avg=':= 1 * 0.75 * _default_' range=':= _default_'/>
                        </Veins>
                        <!-- End Salt Strategic Cloud Hint Veins -->

                    </Cloud>
                    
                    <!-- Begin Preferred Biome Distribution (Salt Strategic Cloud) Settings -->
                    <Cloud name='hvstSalt1Cloud' block='harvestcraft:salt' inherits='PresetStrategicCloud'>
                        <Description>
                            Large irregular clouds filled lightly with ore.  These are huge, spanning several 
                            adjacent chunks, and consequently rather rare.  They contain a sizeable amount of 
                            ore, but it takes some time and effort to mine due to low density.
                            The intent for strategic clouds is that the player will need to actively search for
                            one and then set up a semi-permanent mining base and spend some time actually mining
                            the ore.
                            2 times as likely in preferred biomes.
                        </Description>
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60888888</WireframeColor>
                        <Setting name='DistributionFrequency' avg=':= 2 * 1 * 1 * hvstSaltFreq *_default_'/>
                        <Setting name='CloudRadius' avg=':= 1 * 1 * hvstSaltSize * _default_' range=':= 1 * 1 * hvstSaltSize * _default_'/>
                        <Setting name='CloudThickness' avg=':= 1 * 1 * hvstSaltSize * _default_' range=':= 1 * 1 * hvstSaltSize * _default_'/>
                        <Setting name='CloudHeight' avg='60' range='10' type='normal' scaleTo='Base'/>
                        <Setting name='OreDensity' avg=':= 1 * 0.75 * _default_' range=':= _default_'/>
                        <Setting name='CloudThickness' avg=':= 1 * 1 * 1 * hvstSaltSize * _default_' range=':= 1 * 1 * 1 * hvstSaltSize  * _default_'/>
                        <Replaces block='minecraft:stone'/>
                        <BiomeType name='Ocean'/>
                        <BiomeType name='Beach'/>
                        <BiomeType name='Mountain'/>
                        
                        <!-- Begin Salt Strategic Cloud Hint Veins -->
                        <Veins name='hvstSalt1HintVeins' block='harvestcraft:salt' inherits='PresetHintVeins'>
                            <Description>
                                Small, fairly rare motherlodes with 2-4 horizontal veins each.
                                2 times as likely in preferred biomes.
                            </Description>
                            <DrawWireframe>:=drawWireframes</DrawWireframe>
                            <WireframeColor>0x60888888</WireframeColor>
                            <Setting name='MotherlodeFrequency' avg=':= 2 * 1.2 * 1 * 1 * hvstSaltFreq * _default_' range=':= _default_'/> 
                            <Setting name='MotherlodeHeight' avg=':= 60' range=':= 10' type='normal' scaleTo='Base' /> 
                            <Setting name='MotherlodeRangeLimit' avg=':= 1 * 1 * hvstSaltSize * _default_' range=':= 1 * 1 * hvstSaltSize * _default_'/>
                            <Setting name='OreDensity' avg=':= 1 * 0.75 * _default_' range=':= _default_'/>
                            <BiomeType name='Ocean'/>
                            <BiomeType name='Beach'/>
                            <BiomeType name='Mountain'/>
                        </Veins>
                        <!-- End Salt Strategic Cloud Hint Veins -->

                    </Cloud>
                    <!-- End Preferred Biome Distribution (Salt Strategic Cloud) Settings -->
                
                </IfCondition>
                <!-- End  StrategicCloud distribution of Salt -->
                
                
                <!-- Begin  Vanilla distribution of Salt -->
                <IfCondition condition=':= hvstSaltDist = "vanillaStdGen"'>
                
                    <StandardGen name='hvstSalt0Standard' block='harvestcraft:salt' inherits='PresetStandardGen'>
                        <Description>
                            This mimics vanilla ore generation.
                        </Description>
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60888888</WireframeColor>
                        <Setting name='Size' avg=':= 1 * 2 * hvstSaltSize * _default_'/>
                        <Setting name='Frequency' avg=':= 1 * 1 * 1 * hvstSaltFreq * _default_'/>
                        <Setting name='Height' avg=':= 60' range=':= 10'/> 
                        <Replaces block='minecraft:stone'/>
                    </StandardGen>
                    
                    <!-- Begin Preferred Biome Distribution (Salt Vanilla) Settings -->
                    <StandardGen name='hvstSalt1Standard' block='harvestcraft:salt' inherits='PresetStandardGen'>
                        <Description>
                            This mimics vanilla ore generation.
                            2 times as likely in preferred biomes.
                        </Description>
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60888888</WireframeColor>
                        <Setting name='Size' avg=':= 1 * 2 * hvstSaltSize * _default_'/>
                        <Setting name='Frequency' avg=':= 2 * 1 * 1 * hvstSaltFreq * _default_'/>
                        <Setting name='Height' avg=':= 60' range=':= 10'/> 
                        <Replaces block='minecraft:stone'/>
                        <BiomeType name='Ocean'/>
                        <BiomeType name='Beach'/>
                        <BiomeType name='Mountain'/>
                    </StandardGen>
                    <!-- End Preferred Biome Distribution (Salt Vanilla) Settings -->
                
                </IfCondition>
                <!-- End  Vanilla distribution of Salt -->
                
                <!-- End Salt Generation --> 

                <!-- Done adding ores -->
            
            </IfCondition>
            <!-- Overworld Setup Complete -->


 
 
        
        </ConfigSection>
        <!-- Custom Ore Gen Configuration Complete! -->
    
    </IfModInstalled> 
 


