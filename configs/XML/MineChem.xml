                        <Setting name='CloudThickness' avg=':= 1 * 0.8 * mchmUraniumSize * _default_' range=':= 1 * 0.8 * mchmUraniumSize * _default_'/>
                        <Setting name='CloudHeight' avg='20' range='10' type='normal' scaleTo='Base'/>
                        <Setting name='OreDensity' avg=':= 1 * 0.3 * _default_' range=':= _default_'/>
                        <Setting name='CloudThickness' avg=':= 1 * 1 * 0.8 * mchmUraniumSize * _default_' range=':= 1 * 1 * 0.8 * mchmUraniumSize  * _default_'/>
                        <Replaces block='minecraft:stone'/>
