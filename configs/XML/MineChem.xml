                <!--  StrategicCloud distribution of Uranium. -->
                <IfCondition condition=':= mchmUraniumDist = "strategicCloud"'>
                
                    <Cloud name='mchmUranium0Cloud' block='minechem:tile.oreUranium' inherits='PresetStrategicCloud'>
