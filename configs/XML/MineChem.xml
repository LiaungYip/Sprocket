                <!--  Vanilla distribution of Uranium. -->
                <IfCondition condition=':= mchmUraniumDist = "vanillaStdGen"'>
                
                    <StandardGen name='mchmUranium0Standard' block='minechem:tile.oreUranium' inherits='PresetStandardGen'>
                        <Description>
