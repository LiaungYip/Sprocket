            <!-- Setup Overworld -->

            <IfCondition condition=':= ?COGActive'>


                <!-- **********   Vanilla Deposit Removal   ************* -->

        <!-- Adding ores --> 

            </IfCondition>


            <!-- Setup Nether -->

            <IfCondition condition=':= dimension.generator = "HellRandomLevelSource"'>


                <!-- **********   Vanilla Deposit Removal   ************* -->

        <!-- Adding ores --> 

            </IfCondition>


            <!-- Setup End -->

            <IfCondition condition=':= dimension.generator = "EndRandomLevelSource"'>


                <!-- **********   Vanilla Deposit Removal   ************* -->

                    <Substitute name='HardcoreEnderExpansionStandardOreSubstitute0' block='minecraft:end_stone'>
                        <Description> 
                            Replace vanilla-generated ore clusters.   
                        </Description>
                        <Comment>  
                            The global option deferredPopulationRange must be large enough to catch all ore clusters (>= 32).
                        </Comment>
                         <Replaces block='HardcoreEnderExpansion:stardust_ore' />
                        <Replaces block='HardcoreEnderExpansion:instability_orb_ore' />
                        <Replaces block='HardcoreEnderExpansion:endium_ore' />
                        <Replaces block='HardcoreEnderExpansion:igneous_rock_ore' />
                        <Replaces block='HardcoreEnderExpansion:end_powder_ore' />

                </Substitute>

        <!-- Adding ores --> 

                <IfCondition condition=':= heexStardustDist = "layeredVeins"'>
                    <Veins name='heexStardustVeins' block='HardcoreEnderExpansion:stardust_ore' inherits='PresetLayeredVeins'>
                        <Description> 
                            Small, fairly rare motherlodes with 2-4 horizontal veins each.
                        </Description> 
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60018f22</WireframeColor> 
                        <Setting name='MotherlodeFrequency' avg=':= 1 * heexStardustFreq * _default_'/>
                        <Setting name='MotherlodeSize' avg=':= 1 * heexStardustSize * _default_' range=':= 1 * heexStardustSize * _default_'/>
                        <Setting name='MotherlodeHeight' avg=':= 120/64 * dimension.groundLevel' range=':= 120/64 * dimension.groundLevel' type='normal'/> 
                        <Setting name='SegmentRadius' avg=':= 1 * heexStardustSize * _default_' range=':= 1 * heexStardustSize * _default_'/>
                        <Replaces block='minecraft:end_stone'/>
                    </Veins>
                </IfCondition>

                <IfCondition condition=':= heexStardustDist = "vanillaStdGen"'>
                    <StandardGen name='heexStardustStandard' block='HardcoreEnderExpansion:stardust_ore' inherits='PresetStandardGen'>
                        <Description> This mimics vanilla ore generation. </Description>
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60018f22</WireframeColor>
                        <Setting name='Size' avg=':= 1 * heexStardustSize * _default_'/>
                        <Setting name='Frequency' avg=':= 1 * heexStardustFreq * _default_'/>
                        <Setting name='Height' avg=':= 120/64 * dimension.groundLevel' range=':= 120/64 * dimension.groundLevel'/> 
