
<!--  

Custom Ore Generation:   Hardcore Ender Expansion Module

Generates: Stardust, Instability Orb, Endium, Igneous Rock, End Powder

-->
<IfModInstalled name="HardcoreEnderExpansion"> 

    <ConfigSection>
 
        <!-- Setup Screen Configuration -->

            <ConfigSection> 
                <OptionDisplayGroup name='groupHardcoreEnderExpansion' displayName='Hardcore Ender Expansion Ores' displayState='shown'> 
                    <Description> 
                        Distribution options for Hardcore Ender Expansion Ores.
                    </Description>
                </OptionDisplayGroup>
    
                 <ConfigSection>

            <!-- Stardust Configuration UI -->

            <OptionChoice name='heexStardustDist' displayState='shown' displayGroup='groupHardcoreEnderExpansion'> 
                <Description> Controls how Stardust is generated </Description> 
                <DisplayName>Hardcore Ender Expansion Stardust Type</DisplayName>

               <Choice value='layeredVeins' displayValue='Layered Veins'>
                   <Description>
                       Layered Veins. 
                   </Description>
               </Choice>

               <Choice value='vanillaStdGen' displayValue='Vanilla'>
                   <Description>
                       Vanilla-style clusters. 
                   </Description>
               </Choice>
                <Choice value='none' displayValue='None' description='Stardust is not generated in the world.'/>
            </OptionChoice>
    
            <OptionNumeric name='heexStardustFreq' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupHardcoreEnderExpansion'>
                <Description> Frequency multiplier for Hardcore Ender Expansion Stardust distributions </Description>
                <DisplayName>Hardcore Ender Expansion Stardust Freq.</DisplayName>
            </OptionNumeric>

            <OptionNumeric name='heexStardustSize' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupHardcoreEnderExpansion'>
                <Description> Size multiplier for Hardcore Ender Expansion Stardust distributions </Description>
