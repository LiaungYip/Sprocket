
<IfModInstalled name="Forestry"> 

    <ConfigSection>
 
        <!-- Setup Screen Configuration -->

            <ConfigSection> 
                <OptionDisplayGroup name='groupforestry' displayName='Forestry Ores' displayState='shown'> 
                    <Description> 
                        Distribution options for Forestry Ores.
                    </Description>
                </OptionDisplayGroup>
    
                 <ConfigSection>

            <!-- Apatite Configuration UI -->

            <OptionChoice name='frstApatiteDist' displayState='shown' displayGroup='groupforestry'> 
                <Description> Controls how Apatite is generated </Description> 
                <DisplayName>Forestry Apatite Type</DisplayName>

               <Choice value='sparseVeins' displayValue='Sparse Veins'>
                   <Description>
                       Sparse Veins
                   </Description>
               </Choice>

               <Choice value='strategicCloud' displayValue='Clouds'>
                   <Description>
                       Strategic Clouds 
                   </Description>
               </Choice>

               <Choice value='vanillaStdGen' displayValue='Vanilla'>
                   <Description>
                       Vanilla-style clusters. 
                   </Description>
               </Choice>
                <Choice value='none' displayValue='None' description='Apatite is not generated in the world.'/>
            </OptionChoice>
    
            <OptionNumeric name='frstApatiteFreq' default='1'  min='0' max='5' displayState='hidden' displayGroup='groupforestry'>
                <Description> Frequency multiplier for Forestry Apatite distributions </Description>
                <DisplayName>Forestry Apatite Freq.</DisplayName>
            </OptionNumeric>

            <OptionNumeric name='frstApatiteSize' default='1'  min='0' max='5' displayState='hidden' displayGroup='groupforestry'>
                <Description> Size multiplier for Forestry Apatite distributions </Description>
                <DisplayName>Forestry Apatite Size</DisplayName>
            </OptionNumeric>
                </ConfigSection> 
                <ConfigSection>

            <!-- Copper Configuration UI -->

            <OptionChoice name='frstCopperDist' displayState='shown' displayGroup='groupforestry'> 
                <Description> Controls how Copper is generated </Description> 
                <DisplayName>Forestry Copper Type</DisplayName>

               <Choice value='layeredVeins' displayValue='Layered Veins'>
                   <Description>
                       Layered Veins. 
                   </Description>
               </Choice>

               <Choice value='strategicCloud' displayValue='Clouds'>
                   <Description>
                       Strategic Clouds 
                   </Description>
               </Choice>

               <Choice value='vanillaStdGen' displayValue='Vanilla'>
                   <Description>
                       Vanilla-style clusters. 
                   </Description>
               </Choice>
                <Choice value='none' displayValue='None' description='Copper is not generated in the world.'/>
            </OptionChoice>
    
            <OptionNumeric name='frstCopperFreq' default='1'  min='0' max='5' displayState='hidden' displayGroup='groupforestry'>
                <Description> Frequency multiplier for Forestry Copper distributions </Description>
                <DisplayName>Forestry Copper Freq.</DisplayName>
            </OptionNumeric>

            <OptionNumeric name='frstCopperSize' default='1'  min='0' max='5' displayState='hidden' displayGroup='groupforestry'>
                <Description> Size multiplier for Forestry Copper distributions </Description>
                <DisplayName>Forestry Copper Size</DisplayName>
            </OptionNumeric>
                </ConfigSection> 
                <ConfigSection>

            <!-- Tin Configuration UI -->

            <OptionChoice name='frstTinDist' displayState='shown' displayGroup='groupforestry'> 
                <Description> Controls how Tin is generated </Description> 
                <DisplayName>Forestry Tin Type</DisplayName>

               <Choice value='layeredVeins' displayValue='Layered Veins'>
                   <Description>
                       Layered Veins. 
                   </Description>
               </Choice>

               <Choice value='strategicCloud' displayValue='Clouds'>
                   <Description>
                       Strategic Clouds 
                   </Description>
               </Choice>

               <Choice value='vanillaStdGen' displayValue='Vanilla'>
                   <Description>
                       Vanilla-style clusters. 
                   </Description>
               </Choice>
                <Choice value='none' displayValue='None' description='Tin is not generated in the world.'/>
            </OptionChoice>
    
            <OptionNumeric name='frstTinFreq' default='1'  min='0' max='5' displayState='hidden' displayGroup='groupforestry'>
                <Description> Frequency multiplier for Forestry Tin distributions </Description>
                <DisplayName>Forestry Tin Freq.</DisplayName>
            </OptionNumeric>

            <OptionNumeric name='frstTinSize' default='1'  min='0' max='5' displayState='hidden' displayGroup='groupforestry'>
                <Description> Size multiplier for Forestry Tin distributions </Description>
                <DisplayName>Forestry Tin Size</DisplayName>
            </OptionNumeric>
                </ConfigSection> 
            </ConfigSection> 


            <!-- Setup Overworld -->

            <IfCondition condition=':= ?COGActive'>


                <!-- **********   Vanilla Deposit Removal   ************* -->

                    <Substitute name='forestryStandardOreSubstitute0' block='minecraft:stone'>
                        <Description> 
                            Replace vanilla-generated ore clusters.   
                        </Description>
                        <Comment>  
                            The global option deferredPopulationRange must be large enough to catch all ore clusters (>= 32).
                        </Comment>
                         <Replaces block='Forestry:resources' />
                        <Replaces block='Forestry:resources:1' />
                        <Replaces block='Forestry:resources:2' />

                </Substitute>

        <!-- Adding ores --> 

                <IfCondition condition=':= frstApatiteDist = "sparseVeins"'>
                    <Veins name='frstApatiteVeins' block='Forestry:resources' inherits='PresetSparseVeins'>    
                        <Description>
                            Large veins filled very lightly with ore.  Because they contain less ore per volume, 
                            these veins are relatively wide and long.  Mining the ore from them is time consuming 
                            compared to solid ore veins.  They are also more difficult to follow, since it is 
                            harder to get an idea of their direction while mining.
                        </Description>
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60592ab4</WireframeColor>
                        <Setting name='MotherlodeFrequency' avg=':= frstApatiteFreq * _default_'/>
                        <Setting name='MotherlodeSize' avg=':= frstApatiteSize * _default_' range=':= frstApatiteSize * _default_'/>
                        <Setting name='SegmentRadius' avg=':= frstApatiteSize * _default_' range=':= frstApatiteSize * _default_'/>
                        <Replaces block='minecraft:stone'/>
                    </Veins>
                </IfCondition>

                <IfCondition condition=':= frstApatiteDist = "strategicCloud"'>
                    <Cloud name='frstApatiteCloud' block='Forestry:resources' inherits='PresetStrategicCloud'>
                        <Description>  
                            Large irregular clouds filled lightly with ore.  These are huge, spanning several 
                            adjacent chunks, and consequently rather rare.  They contain a sizeable amount of 
                            ore, but it takes some time and effort to mine due to low density.
                            The intent for strategic clouds is that the player will need to actively search for
                            one and then set up a semi-permanent mining base and spend some time actually mining
                            the ore.
                        </Description> 
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60592ab4</WireframeColor> 
                        <Setting name='DistributionFrequency' avg=':= frstApatiteFreq *_default_'/>
                        <Setting name='CloudRadius' avg=':= frstApatiteSize * _default_' range=':= frstApatiteSize * _default_'/>
                        <Setting name='CloudThickness' avg=':= frstApatiteSize * _default_' range=':= frstApatiteSize * _default_'/>
                        <Replaces block='minecraft:stone'/>
                        <Veins name='frstApatiteHintVeins' block='Forestry:resources' inherits='PresetHintVeins'>
                            <DrawWireframe>:=drawWireframes</DrawWireframe>
                            <WireframeColor>0x60592ab4</WireframeColor> 
                            <Setting name='MotherlodeFrequency' avg=':= 1.2 * _default_' range=':= _default_'/> 
                            <Setting name='MotherlodeRangeLimit' avg=':= frstApatiteSize * _default_' range=':= frstApatiteSize * _default_'/>
                        </Veins>
                    </Cloud>
                </IfCondition>

                <IfCondition condition=':= frstApatiteDist = "vanillaStdGen"'>
                    <StandardGen name='frstApatiteStandard' block='Forestry:resources' inherits='PresetStandardGen'>
                        <Description> This mimics vanilla ore generation. </Description>
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60592ab4</WireframeColor>
                        <Setting name='Size' avg=':= frstApatiteSize * _default_'/>
                        <Setting name='Frequency' avg=':= frstApatiteFreq * _default_'/>
                        <Replaces block='minecraft:stone'/>
                    </StandardGen>
                </IfCondition>

                <IfCondition condition=':= frstCopperDist = "layeredVeins"'>
                    <Veins name='frstCopperVeins' block='Forestry:resources:1' inherits='PresetLayeredVeins'>
                        <Description> 
                            Small, fairly rare motherlodes with 2-4 horizontal veins each.
                        </Description> 
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60592ab4</WireframeColor> 
                        <Setting name='MotherlodeFrequency' avg=':= frstCopperFreq * _default_'/>
                        <Setting name='MotherlodeSize' avg=':= frstCopperSize * _default_' range=':= frstCopperSize * _default_'/>
                        <Setting name='SegmentRadius' avg=':= frstCopperSize * _default_' range=':= frstCopperSize * _default_'/>
                        <Replaces block='minecraft:stone'/>
                    </Veins>
                </IfCondition>

                <IfCondition condition=':= frstCopperDist = "strategicCloud"'>
                    <Cloud name='frstCopperCloud' block='Forestry:resources:1' inherits='PresetStrategicCloud'>
                        <Description>  
                            Large irregular clouds filled lightly with ore.  These are huge, spanning several 
                            adjacent chunks, and consequently rather rare.  They contain a sizeable amount of 
                            ore, but it takes some time and effort to mine due to low density.
                            The intent for strategic clouds is that the player will need to actively search for
                            one and then set up a semi-permanent mining base and spend some time actually mining
                            the ore.
                        </Description> 
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60592ab4</WireframeColor> 
                        <Setting name='DistributionFrequency' avg=':= frstCopperFreq *_default_'/>
                        <Setting name='CloudRadius' avg=':= frstCopperSize * _default_' range=':= frstCopperSize * _default_'/>
                        <Setting name='CloudThickness' avg=':= frstCopperSize * _default_' range=':= frstCopperSize * _default_'/>
                        <Replaces block='minecraft:stone'/>
                        <Veins name='frstCopperHintVeins' block='Forestry:resources:1' inherits='PresetHintVeins'>
                            <DrawWireframe>:=drawWireframes</DrawWireframe>
                            <WireframeColor>0x60592ab4</WireframeColor> 
                            <Setting name='MotherlodeFrequency' avg=':= 1.2 * _default_' range=':= _default_'/> 
                            <Setting name='MotherlodeRangeLimit' avg=':= frstCopperSize * _default_' range=':= frstCopperSize * _default_'/>
                        </Veins>
                    </Cloud>
                </IfCondition>

                <IfCondition condition=':= frstCopperDist = "vanillaStdGen"'>
                    <StandardGen name='frstCopperStandard' block='Forestry:resources:1' inherits='PresetStandardGen'>
                        <Description> This mimics vanilla ore generation. </Description>
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60592ab4</WireframeColor>
                        <Setting name='Size' avg=':= frstCopperSize * _default_'/>
                        <Setting name='Frequency' avg=':= frstCopperFreq * _default_'/>
                        <Replaces block='minecraft:stone'/>
                    </StandardGen>
                </IfCondition>

                <IfCondition condition=':= frstTinDist = "layeredVeins"'>
                    <Veins name='frstTinVeins' block='Forestry:resources:2' inherits='PresetLayeredVeins'>
                        <Description> 
                            Small, fairly rare motherlodes with 2-4 horizontal veins each.
                        </Description> 
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60592ab4</WireframeColor> 
                        <Setting name='MotherlodeFrequency' avg=':= frstTinFreq * _default_'/>
                        <Setting name='MotherlodeSize' avg=':= frstTinSize * _default_' range=':= frstTinSize * _default_'/>
                        <Setting name='SegmentRadius' avg=':= frstTinSize * _default_' range=':= frstTinSize * _default_'/>
                        <Replaces block='minecraft:stone'/>
                    </Veins>
                </IfCondition>

                <IfCondition condition=':= frstTinDist = "strategicCloud"'>
                    <Cloud name='frstTinCloud' block='Forestry:resources:2' inherits='PresetStrategicCloud'>
                        <Description>  
                            Large irregular clouds filled lightly with ore.  These are huge, spanning several 
                            adjacent chunks, and consequently rather rare.  They contain a sizeable amount of 
                            ore, but it takes some time and effort to mine due to low density.
                            The intent for strategic clouds is that the player will need to actively search for
                            one and then set up a semi-permanent mining base and spend some time actually mining
                            the ore.
                        </Description> 
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60592ab4</WireframeColor> 
                        <Setting name='DistributionFrequency' avg=':= frstTinFreq *_default_'/>
                        <Setting name='CloudRadius' avg=':= frstTinSize * _default_' range=':= frstTinSize * _default_'/>
                        <Setting name='CloudThickness' avg=':= frstTinSize * _default_' range=':= frstTinSize * _default_'/>
                        <Replaces block='minecraft:stone'/>
                        <Veins name='frstTinHintVeins' block='Forestry:resources:2' inherits='PresetHintVeins'>
                            <DrawWireframe>:=drawWireframes</DrawWireframe>
                            <WireframeColor>0x60592ab4</WireframeColor> 
                            <Setting name='MotherlodeFrequency' avg=':= 1.2 * _default_' range=':= _default_'/> 
                            <Setting name='MotherlodeRangeLimit' avg=':= frstTinSize * _default_' range=':= frstTinSize * _default_'/>
                        </Veins>
                    </Cloud>
                </IfCondition>

                <IfCondition condition=':= frstTinDist = "vanillaStdGen"'>
                    <StandardGen name='frstTinStandard' block='Forestry:resources:2' inherits='PresetStandardGen'>
                        <Description> This mimics vanilla ore generation. </Description>
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60592ab4</WireframeColor>
                        <Setting name='Size' avg=':= frstTinSize * _default_'/>
                        <Setting name='Frequency' avg=':= frstTinFreq * _default_'/>
                        <Replaces block='minecraft:stone'/>
                    </StandardGen>
                </IfCondition>

            </IfCondition>


            <!-- Setup Nether -->

            <IfCondition condition=':= dimension.generator = "HellRandomLevelSource"'>


                <!-- **********   Vanilla Deposit Removal   ************* -->

        <!-- Adding ores --> 

            </IfCondition>


            <!-- Setup End -->

            <IfCondition condition=':= dimension.generator = "EndRandomLevelSource"'>


                <!-- **********   Vanilla Deposit Removal   ************* -->

        <!-- Adding ores --> 

            </IfCondition>



    </ConfigSection>
</IfModInstalled> 
 